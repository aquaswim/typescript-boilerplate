{
  "name": "my-awesome-app",
  "version": "0.0.1",
  "description": "My Awesome app description",
  "scripts": {
    "start": "node dist",
    "dev": "ts-node-dev --rs --respawn src",
    "test": "mocha --exit",
    "test:watch": "mocha --watch",
    "coverage": "nyc -x \"**/*.spec.ts\" npm run test",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "keywords": [
    "awesome"
  ],
  "author": "Bayu Setiawan",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3",
    "gts": "^3.1.0"
  },
  "mocha": {
    "spec": "./src/**/*.spec.ts",
    "require": "ts-node/register",
    "extensions": [
      "ts",
      "tsx"
    ],
    "watch-files": "src"
  }
}
